use std
use args

const main = {
	var argv = ["-h", "-n", "5", "--", "-F", "foo", "bar"][:]

	args.init(argv)

	args.setusage("test [-h] [-n N] nameâ€¦")

	var c
	while((c = args.opt()) != (0 : char))
		match c
		| 'h':
			;
		| 'n':
			args.earg()
		| _:
			args.usage()
		;;
	;;

	if args.argv().len != 4
		std.fatal("incorrect argument count\n")
	;;

	args.progname()
}
